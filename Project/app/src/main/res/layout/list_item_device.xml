<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/device_name"
        android:layout_marginStart="@dimen/device_text_marginStart"
        android:layout_marginEnd="@dimen/device_text_marginStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/device_title"/>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/device_text_marginStart"
        android:layout_marginEnd="@dimen/device_text_marginStart">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_state"
            android:textSize="@dimen/device_medium_title"/>
        <TextView android:id="@+id/connection_state"
            android:layout_marginStart="@dimen/device_text_marginStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/disconnected"
            android:textColor="@color/colorDisconnected"
            android:textSize="@dimen/device_subtitle"/>
    </LinearLayout>

    <TextView
        android:id="@+id/device_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/device_text_marginStart"
        android:layout_marginEnd="@dimen/device_text_marginStart"
        android:textSize="@dimen/device_subtitle" />
</LinearLayout>
